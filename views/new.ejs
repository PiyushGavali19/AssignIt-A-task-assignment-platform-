<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Chat</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-sky-50 min-h-screen flex flex-col items-center justify-center">

    <!-- Title -->
    <h2 class="font-bold text-3xl text-dodgerblue mb-8 font-serif">Add New Chat</h2>

    <!-- Form Container -->
    <div class="bg-white p-8 rounded-lg shadow-lg border border-cyan-600 w-full max-w-lg mx-auto">

        <!-- New Chat Form -->
        <form action="/chats" method="post" class="space-y-6">
            <!-- From Input -->
            <div>
                <label class="block text-lg font-medium text-gray-700 mb-2" for="from">Who are you:</label>
                <input type="text" name="from" id="from" placeholder="Enter your name" class="w-full border-2 border-gray-300 rounded-md p-3 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500">
            </div>

            <!-- Message Input -->
            <div>
                <label class="block text-lg font-medium text-gray-700 mb-2" for="msg">Message:</label>
                <textarea name="msg" id="msg" placeholder="Enter your message" class="w-full border-2 border-gray-300 rounded-md p-3 h-32 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500"></textarea>
            </div>

            <!-- To Input -->
            <div>
                <label class="block text-lg font-medium text-gray-700 mb-2" for="to">Receiver:</label>
                <input type="text" name="to" id="to" placeholder="Enter receiver's name" class="w-full border-2 border-gray-300 rounded-md p-3 focus:outline-none focus:border-sky-500 focus:ring-1 focus:ring-sky-500">
            </div>

            <!-- Send Button -->
            <div class="flex justify-center">
                <button type="submit" class="w-full py-3 px-6 bg-sky-500 text-white font-bold rounded-lg hover:bg-sky-600 transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500">Send</button>
            </div>
        </form>
    </div>

</body>
</html>
